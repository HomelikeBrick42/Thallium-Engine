{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Everything",
            "windows": {
                "command": "${workspaceFolder}/BuildAll.bat",
            },
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": [
                "$gcc",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "shell",
            "label": "Clean Everything",
            "windows": {
                "command": "${workspaceFolder}/CleanAll.bat",
            },
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "group": "build",
        },
    ],
    "version": "2.0.0",
}
